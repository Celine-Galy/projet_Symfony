{% extends 'layout.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}
    <h1>Mon compte</h1>
<div class="container front">

<div class="card w-75">
  <div class="card-body">

    <h5 class="card-title">{{ user.pseudo }}</h5>
    <p class="card-text">
     {# <label>Prénom: </label><br>
     <label>Nom:</label><br>
      #}
      <table class="table">
        <tbody>
            
            <tr>
                <th></th>
                <td><img class="avatar" src="/uploads/{{ user.avatar }}"></td>
            </tr>
            
            <tr>
                <th>Prénom</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td> {{ user.email }}</td>
            </tr>
            
        </tbody>
    </table> 
    </p>
   
  </div>
</div>
    <a class="btn btn-primary" href="{{ path('user_edit', {'id': user.id}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}
    </div>
{% endblock %}
