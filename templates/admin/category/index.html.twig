{% extends 'admin/layout.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %} 

<div class="container">
<h1>Liste des Catégories</h1>
 <button type="button" class="btn btn-outline-primary admin" data-mdb-ripple-color="dark"><a href="{{ path('category_new') }}">Créer une nouvelle catégorie</a></button>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>Nom</th>
                <th>Activée</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.name }}</td>
                <td>{{ category.enabled ? 'Yes' : 'No' }}</td>
                <td>{{ category.description }}</td>
                <td>
                    <button type="button" class="btn btn-outline-primary mb-2" data-mdb-ripple-color="dark"><a href="{{ path('category_show', {'id': category.id}) }}">Voir</a></button>
                    <button type="button" class="btn btn-outline-primary mb-2" data-mdb-ripple-color="dark"><a href="{{ path('category_edit', {'id': category.id}) }}">Editer</a></button>
                    <button type="button" class="btn btn-outline-primary mb-2" data-mdb-ripple-color="dark"><a href="{{ path('category_change_status', {'id': category.id}) }}">
                        {{ category.enabled ? 'Désactiver' : 'Activer'}}
                    </a></button>
                    {{ include('admin/category/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
{% endblock %}
