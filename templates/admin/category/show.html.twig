{% extends 'admin/layout.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
<div class="container divadmin">
    <h1>Category</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{{ category.enabled ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ category.description }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('category_index') }}">Retour</a>

    <a class="btn btn-primary" href="{{ path('category_edit', {'id': category.id}) }}">Editer</a>

    {{ include('admin/category/_delete_form.html.twig') }}
    </div>
{% endblock %}
