{% extends 'admin/layout.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
<div class="container">
<a class="btn btn-primary mt-4 mb-2" href="{{ path('category_index') }}"><i class="fas fa-arrow-left"></i>  Retour à la liste</a>
    <h1 class="mt-4 mb-4">Catégorie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Activée</th>
                <td>{{ category.enabled ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ category.description }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('category_edit', {'id': category.id}) }}">Modifier</a>

    </div>
{% endblock %}
