{% extends 'admin/layout.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
   
<div class="container"> 
{# read and display just one flash message type #}
{% for message in app.flashes('notice') %}
    <div class="alert alert-primary mt-2">
        {{ message }}
    </div>
{% endfor %} 
<h1 class="mt-4 mb-4">Liste des utilisateurs</h1>
    <table class="table table-striped table-light">
        <thead>
            <tr>
                <th>Email</th>
                <th>RÃ´les</th>
                <th>Articles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                
                <td>{{ user.email }}</td>
                <td>
                {% for role in user.roles %}
                    {% if role == "ROLE_USER" %}
                    Utilisateur
                    {% elseif role == "ROLE_AUTHOR" %}
                    Auteur
                    {% elseif role == "ROLE_ADMIN" %}
                    Administrateur
                    {% endif %}
                    {% endfor %}
                </td>
                <td>{{ user.articles|length}}</td>
                <td><a class="btn btn-primary mb-2" data-mdb-ripple-color="dark" href="{{ path('admin_modify_user', {'id': user.id}) }}"><i class="fas fa-pencil-alt"></i> Modifier</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

   
    </div>
{% endblock %}
