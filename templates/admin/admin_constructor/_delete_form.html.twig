<form method="post" action="{{ path('constructor_delete', {'id': constructor.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ constructor.id) }}">
    <button type="submit" class="btn btn-danger mt-2" data-mdb-ripple-color="dark"><i class="fas fa-trash-alt"></i> Supprimer</button>
</form>
