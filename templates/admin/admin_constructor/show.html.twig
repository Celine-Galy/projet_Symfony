        </tbody>
    </table>

    <a href="{{ path('constructor_index') }}">Retour</a>

    <a href="{{ path('constructor_edit', {'id': constructor.id}) }}">Editer</a>

    {{ include('constructor/_delete_form.html.twig') }}
