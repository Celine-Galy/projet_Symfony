{% block title %}Constructor{% endblock %}

{% block body %}
    <h1>Constructor</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ constructor.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ constructor.name }}</td>
            </tr>
            <tr>
                <th>Cover</th>
                <td>{{ constructor.cover }}</td>
