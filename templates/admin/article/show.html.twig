{% extends 'admin/layout.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
<div class="container divadmin">
    <h1>Revue</h1>

    <table class="table">
        <tbody>
           
            <tr>
                <th>Titre</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ article.content }}</td>
            </tr>
            <tr>
                <th>Couverture</th>
                <td>{{ article.cover }}</td>
            </tr>
            <tr>
                <th>Publié</th>
                <td>{{ article.published ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Crée le</th>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Mis à jour le</th>
                <td>{{ article.updatedAt ? article.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('article_index') }}">Retour</a>

    <a class="btn btn-primary" href="{{ path('article_edit', {'id': article.id}) }}">Editer</a>

    {{ include('admin/article/_delete_form.html.twig') }}
    </div>
{% endblock %}
