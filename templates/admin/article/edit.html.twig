{% extends 'admin/layout.html.twig' %}

{% block title %}Modification
{% endblock %}

{% block body %}

	<div class="container">
		{% if is_granted ('ROLE_ADMIN') %}
			<a class="btn btn-primary mt-4" href="{{ path('article_index') }}">
				<i class="fas fa-arrow-left"></i>
				Retour à la liste</a>

		{% elseif is_granted ('ROLE_AUTHOR') %}
			<a class="btn btn-outline-primary mt-4" href="{{ path('article_index',{'id': app.user.id}) }}">Retour à la liste</a>
		{% endif %}
		<h1 class="mt-4">Modification de la revue</h1>
		<div class="card p-4 mt-4 bg-light">
			{{ include('admin/article/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
		</div>
	</div>
{% endblock %}
