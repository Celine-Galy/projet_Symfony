{% extends 'admin/layout.html.twig' %}

{% block title %}Edition{% endblock %}

{% block body %} 

<div class="container">
<h1>Edition</h1>
    {{ include('admin/article/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

   {% if is_granted ('ROLE_ADMIN') %}
    <a class="btn btn-outline-primary admin" href="{{ path('article_index') }}">Retour à la liste</a>
    
