{% extends 'layout.html.twig' %}

{% block title %}Article
{% endblock %}

{% block body %}

	<div class="container">
		<h1 class="card-title mb-4 mt-4 surligner">{{ category.name }}</h1>

		<a class="btn btn-primary mb-4 mt-4" href="{{ path('accueil') }}">Retour Ã  l'accueil</a>
		<div class="row">
			<div class="col-md-8 ">
				{% for article in category.articles %}
					<div class="card md-8 shadow-3-strong mb-4">
						<div class="row">
							<div class="col-md-4 bg-image" style="background-image: url('/uploads/{{ article.cover }}');
																	background-size: cover;
																	height: auto;"></div>
							<div class="col-md-8">
								<div class="card-body">
									<h5 class="card-title">{{ article.title }}</h5>
									<span>{{ article.author.firstname }}
										{{ article.author.name }}</span>
									<p class="card-text">
										<small class="text-muted">{{ article.createdAt ? article.createdAt|date('Y-m-d') : '' }}</small>
									</p>
									<p class="card-text">
										{{ article.content|striptags |u.truncate(200,'...')| raw}}</p>

									<a class="btn btn-secondary" href="{{ path('main_article_show', {'id': article.id}) }}">Voir l'article</a>


								</div>

							</div>
						</div>

					</div>
				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
