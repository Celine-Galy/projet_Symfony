{% extends 'layout.html.twig' %}

{% block title %}Article
{% endblock %}

{% block body %}
	
	<div class="container front"><h1>{{ category.name }}</h1>
	
		<a class="btn btn-light btn-rounded mb-2" href="{{ path('accueil') }}">Retour Ã  l'accueil</a>
		{% for article in category.articles %}
		<div class="card mb-3" style="max-width: 80vw">
			<div class="row g-0">
				<div class="col-md-4">
					
						<img src="/uploads/{{ article.cover }}" class="img-fluid"/>
					</div>
					<div class="col-md-8">
						<div class="card-body">
							<h5 class="card-title">{{ article.title }}</h5>
							<span>{{ article.author.firstname }}
								{{ article.author.name }}</span>
								<p class="card-text">
								<small class="text-muted">{{ article.createdAt ? article.createdAt|date('Y-m-d') : '' }}</small>
								</p>
								<p class="card-text">
							{{ article.content|striptags |u.truncate(200,'...')}}</p>
							
							<a href="{{ path('main_article_show', {'id': article.id}) }}">Voir l'article</a>


					</div>
				</div>
			</div>
		</div>{% endfor %}
	</div>
</div>{% endblock %}
