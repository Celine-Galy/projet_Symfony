{% extends 'layout.html.twig' %}

{% block title %}Article
{% endblock %}

{% block body %}
	<h1>Article</h1>
	<div class="container">
		<div class="card">
			<img class="card-img-top" src="/uploads/{{ article.cover }}" width="450" height="300" alt="Card image cap">
			<div class="card-body">
				<h5 class="card-title">{{ article.title }}</h5>
				<p class="card-text">
					<small class="text-muted">{{ article.createdAt ? article.createdAt|date('Y-m-d') : '' }}</small>
				</p>

				<p class="card-text">{{ article.content }}</p>
			</div>
		</div>	
		<hr>
			<a href="{{ path('comment_new', {'id': article.id}) }}">Ajouter un commentaire</a>
		<div class="card">
			<h3>Commentaires</h3>
			{% for comment in article.comments %}
				<span>Ecrit le
					{{ comment.createdAt|date('Y-m-d') }}</span>
				<p>Par: {{ comment.author.pseudo }}</p>
				<p>{{ comment.content }}</p>
				<hr>
			{% endfor %}

		</div>
    </div>
	{% endblock %}
